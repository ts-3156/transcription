<div class="container">
<%- model_class = Transcript -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:audio) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
    </thead>
    <tbody>
    <% @transcripts.each do |transcript| %>
      <tr>
        <td><%= link_to transcript.id, transcript_path(transcript) %></td>
        <td><%= transcript.name %></td>
        <td><%= transcript.audio.attached? ? transcript.audio.filename : 'None' %></td>
        <td><%=l transcript.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_transcript_path(transcript), :class => 'btn btn-outline-secondary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      transcript_path(transcript),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_transcript_path,
              :class => 'btn btn-primary' %>
</div>
